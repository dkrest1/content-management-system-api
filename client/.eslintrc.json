{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "no-console": "warn",
        "no-unused-vars": "warn",
        "no-alert": "warn",

        "react/react-in-jsx-scope": "off", 
        "react/prop-types": "off", 

        "jsx-a11y/anchor-is-valid": "off"
    },
    "settings": {
        "react": {
          "version": "detect"
        }
    }
}
